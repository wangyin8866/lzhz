<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/gradient_white_gray">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bottom_menu_button1"
            style="@style/menu_tab"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:scaleType="centerInside"
                android:src="@drawable/bottom_first"
                android:id="@+id/imageView" />

            <TextView
                style="@style/tab_menu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:text="互助" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_menu_button2"
            style="@style/menu_tab"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1.0"
                android:scaleType="centerInside"
                android:src="@drawable/bottom_second" />

            <TextView
                style="@style/tab_menu_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:text="发现"
                android:id="@+id/textView" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_menu_button3"
            style="@style/menu_tab"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0" >

                <TextView
                    android:id="@+id/noticeRedDot"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="-20dp"
                    android:gravity="center"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/notice"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:scaleType="centerInside"
                    android:src="@drawable/bottom_third"
                    android:layout_below="@+id/noticeRedDot"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <TextView
                style="@style/tab_menu_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:text="公示" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_menu_button4"
            style="@style/menu_tab"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0" >

                <ImageView
                    android:id="@+id/user_home"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/bottom_four" />

                <TextView
                    android:id="@+id/basic_course_hint"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_toRightOf="@id/user_home"
                    android:gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                style="@style/tab_menu_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="3dip"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>